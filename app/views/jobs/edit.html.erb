<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">编辑招聘岗位</h1>
  </div>
  <div class="panel-body">
    <%= simple_form_for @job do |f| %>
    <%= f.input :title, :label => "招聘岗位" %>
    <%= f.input :location, :label => "工作地点" %>
    <%= f.input :company, :label => "公司" %>
    <%= f.input :education_background, :label => "学历要求" %>
    <%= f.input :work_experience, :label => "工作经验" %>
    <%= f.input :description, :label => "职位描述" %>
    <%= f.input :wage_lower_bound, :label => "薪资下限" %>
    <%= f.input :wage_upper_bound, :label => "薪资上限" %>
    <%= f.input :contact_email, :label => "联系方式" %>
    <%= f.input :is_hidden, :label => "隐藏" %>
    <%= f.submit "提交" %>
    <% end %>
  </div>
</div>
