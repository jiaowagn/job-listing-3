<div class="col-md-10 col-sm-12 col-xs-12 col-centered">
  <div class="panel panel-success">
    <div class="panel-heading"><h3>投递履历到 - <%= @job.title %></h3></div>
    <div class="panel-body">
      <%= simple_form_for [@job, @resume] do |f| %>
      <%= f.input :content, :label => "自我介绍" %>
      <%= f.input :attachment, :label => "上传简历" %>
      <%= f.submit "发送简历", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
